---
layout: page-post.njk
---


{% block content %}
    <article class="post" data-input-path="{{ page.filePathStem }}">
      <h1 class="post-title">{{ title }}</h1>
      <time class="post-date" datetime="{{ post.date | postDate }}">{{ post.date | postDate }}</time>
  
 {%- image postimage, "justify-center w-2/3 m-auto my-4 p-0 pr-0 rounded-xl ", 
     title, "(min-width: 20em) 50vw, 100vw, " -%}
{{ content | safe }}
    </article>
    <div class="related">
      <h2>Related Posts</h2>
      <ul class="related-posts">
        {%- for post in collections.posts | reverse %}
        {%- if post.url != page.url %}
        <li><h3><a href="{{ post.url }}">{{ post.data.title }} <small>{{ post.date | postDate }}</small>
        </a></h3></li>
        {%- endif %}
        {%- endfor %}
      </ul>
    </div>
{% endblock %}

