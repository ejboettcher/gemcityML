<footer class="relative flex flex-col w-full py-10 text-lg sm:flex-row sm:justify-center">
  <div class="px-0 py-4 text-center sm:pl-0 pr-3">
        <a class="no-underline hover:text-customRed"
          href="/#about">About</a>
  </div>
   <div class="w-1/2 h-px mx-auto bg-customRed sm:h-auto sm:w-px sm:mx-0"></div>
   <div class="px-0 py-4 text-center sm:pl-3 pr-3">
        <a class="no-underline hover:text-customRed"
          href="/privacy">Privacy</a>
  </div>
  {% for item in site.social %}
    <div class="w-1/2 h-px mx-auto bg-customRed sm:h-auto sm:w-px sm:mx-0"></div>
    <div class="py-4 pl-0 text-center sm:pl-3 pr-3">
      <a class="no-underline hover:text-customRed" href="{{ item.url }}" target="_blank" rel="_noopener">{{ item.title
      }}</a>
      
    </div>
  {% endfor %}
  
</footer>
<div class="w-full bg-white">
  <span class="block pb-5 text-sm font-light text-center">
    &copy; {{ site.title }}, <span x-data x-text="new Date().getFullYear()"></span>
  </span>
</div>